{
  "name": "apollo-graphql-gateway-template",
  "version": "1.0.0",
  "main": "dist/server.js",
  "author": "Paul Hendrickson",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && node dist/server.js",
    "errors": "eslint . --fix-dry-run",
    "fix": "eslint . --fix",
    "build": "tsc",
    "dev": "ts-node-dev --transpile-only --no-notify src/server.ts",
    "install-rover": " yarn add global @apollo/rover",
    "create-graph": "rover supergraph compose --config ./supergraph-config.yaml > ./src/models/supergraph.graphql"
  },
  "dependencies": {
    "@apollo/federation": "^0.33.8",
    "@apollo/gateway": "^0.44.1",
    "@apollo/rover": "^0.4.1",
    "apollo-server-core": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "graphql": "15",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.178",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.12",
    "@types/ramda": "^0.27.60",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsc": "^2.0.3",
    "typescript": "^4.5.3"
  }
}
